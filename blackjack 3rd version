def deal_cards():
  """returns random card"""
  cards = [11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10]
  ##cards = [11,12,3] test
  card = random.choice(cards)
  return card

def deal_another(y):
  y.append(deal_cards())


def add_cards(cards):
  """cards refers to player_cards or dealer_cards lists"""
  
  if 11 in cards and sum(cards) > 21:
    cards.remove(11)
    cards.append(1)
    print (f"player now has {player_cards}")
    
    return sum(cards)
  else:
    return sum(cards)

